extends layouts/main

block content
  h1=pageTitle
  form(action=`/${movie.id}/edit`, method="post")
    input(type="text", name="title", placeholder="Title", minlength="3", value=movie.title)
    input(type="number", name="year", placeholder="Year", value=movie.year)
    input(type="text", name="rating", placeholder="Rating", value=movie.rating)
    textarea(name="synopsis", placeholder="Synopsis")=movie.synopsis
    input(type="text", name="genres", placeholder="Genres", value=genres)
    input(type="submit", value="Submit")
  a(href=`/${movie.id}/delete`) Delete Movie